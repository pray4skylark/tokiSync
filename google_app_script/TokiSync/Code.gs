  const files = seriesFolder.getFilesByName(fileName);
  
  const infoData = {
    id: data.id,
    title: data.title,
    author: data.author || "Unknown",
    category: data.category || "Unknown",
    status: data.status || "Unknown",
    thumbnail: data.thumbnail || "",
